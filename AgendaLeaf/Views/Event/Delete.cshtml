@model AgendaLeaf.Models.ViewModels.EventViewModel
@{
}

<h1>Deletar Evento</h1>

<h4>Evento</h4>

<dl class="dl-horizontal">
    <dt>Nome</dt>
    <dd>@Html.DisplayFor(model => model.Event.Name)</dd>

    <dt>Descrição</dt>
    <dd>@Html.DisplayFor(model => model.Event.Description)</dd>

    <dt>Data</dt>
    <dd>@Html.DisplayFor(model => model.Event.Date)</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Event.Id" />
    <input type="submit" value="Deletar" class="btn btn-danger" />
</form>

<a asp-controller="Home" asp-action="Index">Voltar a tela principal</a>

@if (ViewData["ErrorMessage"] != null)
{
    <br />
    <br />
    <label>@ViewData["ErrorMessage"]</label>
}