@model AgendaLeaf.Models.AgendaLogin;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container py-5">
        <form asp-controller="Access" asp-action="Login" method="post">
            <label class="form-label h3 mb-3">Login</label>

            <div class="mb-3">
                <input type="email" placeholder="Email" asp-for="Email" />
            </div>

            <div class="mb-3">
                <input type="password" placeholder="Senha" asp-for="Password" />
            </div>

            <div class="mb-3">
                 <label>
                    <input type="checkbox" asp-for="KeepLoggedIn" />
                    Me mantenha logado
                </label>
            </div>

            <button type="submit" class="btn btn-dark mb-3">Entrar</button>

            @if(ViewData["ValidateMessage"] != null)
            {
                <br />
                <br />
                <label>@ViewData["ValidateMessage"]</label>
            }
        </form>
        <a asp-controller="Access" asp-action="Register">Cadastrar</a>
    </div>
    
</body>
</html>
