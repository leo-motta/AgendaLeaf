@model AgendaLeaf.Models.ViewModels.EventViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Editar Evento</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Event.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.Name" class="control-label"></label>
                <input asp-for="Event.Name" class="form-control" />
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <input asp-for="Event.Description" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Date" class="control-label"></label>
                <input asp-for="Event.Date" class="form-control" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Type" class="control-label"></label>
                <select asp-for="Event.Type" class="form-control">
                    <option value="Unique">Exclusivo</option>
                    <option value="Shared">Compartilhado</option>
                </select>
                <span asp-validation-for="Event.Type" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Event.OwnerId" class="form-control" value="@ViewBag.OwnerId" placeholder="@ViewBag.OwnerId" />
            <div class="form-group mb-3">
                <label asp-for="UsersId" class="control-label"></label>
                <select asp-for="UsersId" class="form-control" asp-items="@ViewBag.Users" multiple></select>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Salvar" class="btn btn-dark" />
            </div>
        </form>
        @if (ViewData["ErrorMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ErrorMessage"]</label>
        }
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Voltar a tela principal</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}