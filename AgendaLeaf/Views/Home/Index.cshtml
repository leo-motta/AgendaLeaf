@model IEnumerable<AgendaLeaf.Models.Event>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mb-6">Bem Vindo a Agenda Leaf</h1>

    <hr />

    <h3 class="display-6 mb-3">Eventos do Usuário: @ViewBag.email</h3>

    <table class="table table-striped table-hover">
    <thead>
        <tr class="danger">
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td><a asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id">Editar</a></td>
                <td><a asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id">Deletar</a></td>
            </tr>
        }
    </tbody>
    </table>

    <p>
        <a asp-controller="Event" asp-action="Create" class="btn btn-dark">Criar evento</a>
    </p>
</div>
